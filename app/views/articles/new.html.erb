<h1> Create a article</h1>

<!--check for errors, display for errors -->
<% if @article.errors.any? %>
<h2> The following errors must be corrected to create new article.</h2>
<ul>
 <% @article.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
 <% end %>
</ul>
<% end %>


<!-- @article new dorm -->
<%= form_for @article do |f| %>
  <p>
    <!-- text labe and field -->
    <%= f.label :title %>
    <br />
    <%= f.text_field :title %>
  </p>
  
  <p>
    <!-- description label and field -->
    <%= f.label :description %>
    <br />
    <%= f.text_area :description %>
  </p>
  
  <p>
    <!-- submit button -->
    <%= f.submit %>
  </p>

<% end %>
  
